{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "no-console": "off",
    "linebreak-style": 0,
    "semi": 0,
    "import/no-extraneous-dependencies": 0,
    "new-cap": 0,
    "arrow-body-style": 0,
    "no-unused-expressions": 0,
    "array-callback-return": 0,
    "implicit-arrow-linebreak": 0,
    "comma-dangle": 0,
    "function-paren-newline": 0,
    "no-underscore-dangle": 0,
    "no-unused-vars": 1,
    "no-shadow": 1,
    "camelcase": 0,
    "object-curly-newline": 0
  }
}
